<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".PotenciaActivity">

    <EditText
        android:id="@+id/etBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Base"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/etExponente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etBase"
        android:layout_marginTop="16dp"
        android:hint="Exponente"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/btnCalcularPotencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etExponente"
        android:layout_marginTop="16dp"
        android:text="Calcular Potencia"
        android:onClick="calcularPotencia"
        android:backgroundTint="#433F3F"/>

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCalcularPotencia"
        android:layout_marginTop="16dp"
        android:text="Resultado"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvResultado"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="447dp"
        android:onClick="volverPaginaPrincipal"
        android:text="Volver a la pÃ¡gina principal"
        android:backgroundTint="#433F3F"/>
</RelativeLayout>