<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SumarActivity">

    <EditText
        android:id="@+id/etValor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor 1"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etValor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etValor1"
        android:layout_marginTop="16dp"
        android:hint="Valor 2"
        android:inputType="number"/>

    <Button
        android:id="@+id/btnSumar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etValor2"
        android:layout_marginTop="16dp"
        android:text="Sumar"
        android:onClick="sumar"
        android:backgroundTint="#433F3F"/>

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSumar"
        android:layout_marginTop="16dp"
        android:text="Resultado"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#433F3F"
        android:text="Volver a la pÃ¡gina inicial"
        android:textColor="@android:color/white"
        android:onClick="goBack"/>

</RelativeLayout>
